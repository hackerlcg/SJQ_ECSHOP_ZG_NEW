<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- when press -->
    <item android:state_pressed="true"
        android:state_enabled="true"
        ><shape>
            <solid android:color="@color/btn_login_color_press" />

            <corners android:radius="6dp" />
        </shape></item>

    <!-- normal -->
    <item
        android:state_enabled="true"
        ><shape>
            <solid android:color="@color/btn_login_color_normal" />

            <corners android:radius="6dp" />
        </shape></item>
    <item
        android:state_enabled="false"
        ><shape>
            <solid android:color="@color/spec_text_color" />

            <corners android:radius="6dp" />
        </shape></item>

</selector>