<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售金额"
            android:textSize="@dimen/dim32"
            android:layout_margin="10dp" />

        <HorizontalScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_stats_pointone"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tv_label11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#aaaaaa" />

                    <TextView
                        android:id="@+id/tv_value11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#aaaaaa" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_stats_pointtwo"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tv_label22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#aaaaaa" />

                    <TextView
                        android:id="@+id/tv_value22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#aaaaaa" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/item_threes"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_stats_pointthree"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/tv_label33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#aaaaaa" />

                    <TextView
                        android:id="@+id/tv_value33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="#aaaaaa" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@drawable/iv_chartdetail_finish" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_11"
            android:layout_width="@dimen/dim0"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/today"
                android:textSize="@dimen/txt30"
                android:textColor="@color/text_login_color" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_22"
            android:layout_width="@dimen/dim0"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/week"
                android:textSize="@dimen/txt30"
                android:textColor="@color/text_login_color" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_33"
            android:layout_width="@dimen/dim0"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/days30"
                android:textSize="@dimen/txt30"
                android:textColor="@color/text_login_color" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_44"
            android:layout_width="@dimen/dim0"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/days90"
                android:textSize="@dimen/txt30"
                android:textColor="@color/text_login_color" />

        </RelativeLayout>
    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff" />
</LinearLayout>
