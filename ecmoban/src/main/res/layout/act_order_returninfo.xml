<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <include layout="@layout/top_view"/>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim80"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_status_title"
                    android:layout_width="@dimen/px240"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_marginLR"
                    android:gravity="center_vertical"
                    android:text="售后单状态:"
                    android:textColor="@color/text_login_hint_color"
                    android:textSize="@dimen/txt32"/>
                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_status_title"
                    android:gravity="center"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt30"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_long_dark"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim80"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_return_type_title"
                    android:layout_width="@dimen/px240"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_marginLR"
                    android:gravity="center_vertical"
                    android:text="退款类型:"
                    android:textColor="@color/text_login_hint_color"
                    android:textSize="@dimen/txt32"/>
                <TextView
                    android:id="@+id/tv_return_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_return_type_title"
                    android:gravity="center"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt30"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_long_dark"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim80"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_amount_title"
                    android:layout_width="@dimen/px240"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_marginLR"
                    android:gravity="center_vertical"
                    android:text="退款金额:"
                    android:textColor="@color/text_login_hint_color"
                    android:textSize="@dimen/txt32"/>
                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_amount_title"
                    android:gravity="center"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt30"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_long_dark"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim80"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_retsn_title"
                    android:layout_width="@dimen/px240"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_marginLR"
                    android:gravity="center_vertical"
                    android:text="流水号:"
                    android:textColor="@color/text_login_hint_color"
                    android:textSize="@dimen/txt32"/>
                <TextView
                    android:id="@+id/tv_retsn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_retsn_title"
                    android:gravity="center"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt30"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_long_dark"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim80"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_orderno_title"
                    android:layout_width="@dimen/px240"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_marginLR"
                    android:gravity="center_vertical"
                    android:text="订单号:"
                    android:textColor="@color/text_login_hint_color"
                    android:textSize="@dimen/txt32"/>
                <TextView
                    android:id="@+id/tv_orderno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_orderno_title"
                    android:gravity="center"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt30"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_long_dark"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim80"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_return_time_title"
                    android:layout_width="@dimen/px240"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_marginLR"
                    android:gravity="center_vertical"
                    android:text="退货时间:"
                    android:textColor="@color/text_login_hint_color"
                    android:textSize="@dimen/txt32"/>
                <TextView
                    android:id="@+id/tv_return_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_return_time_title"
                    android:gravity="center"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt30"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_long_dark"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim80"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_send_time_title"
                    android:layout_width="@dimen/px240"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_marginLR"
                    android:gravity="center_vertical"
                    android:text="发货时间:"
                    android:textColor="@color/text_login_hint_color"
                    android:textSize="@dimen/txt32"/>
                <TextView
                    android:id="@+id/tv_send_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_send_time_title"
                    android:gravity="center"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt30"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_long_dark"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim80"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_cause_title"
                    android:layout_width="@dimen/px240"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_marginLR"
                    android:gravity="center_vertical"
                    android:text="退换货原因:"
                    android:textColor="@color/text_login_hint_color"
                    android:textSize="@dimen/txt32"/>
                <TextView
                    android:id="@+id/tv_cause"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_cause_title"
                    android:gravity="center"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt30"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_long_dark"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="@dimen/dim80"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/px20"
                android:paddingTop="@dimen/px20">
                <TextView
                    android:id="@+id/tv_return_brief_title"
                    android:layout_width="@dimen/px240"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/layout_marginLR"
                    android:gravity="center_vertical"
                    android:text="问题描述:"
                    android:textColor="@color/text_login_hint_color"
                    android:textSize="@dimen/txt32"/>
                <TextView
                    android:id="@+id/tv_return_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/layout_marginLR"
                    android:layout_toRightOf="@+id/tv_return_brief_title"
                    android:gravity="center"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt30"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:layout_alignParentBottom="true"
                android:background="@color/line_long_dark"/>

            <LinearLayout
                android:id="@+id/ly_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="@dimen/px180"
                    android:layout_height="@dimen/px180"
                    android:layout_margin="@dimen/px30"/>

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="@dimen/px180"
                    android:layout_height="@dimen/px180"
                    android:layout_margin="@dimen/px30"/>

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="@dimen/px180"
                    android:layout_height="@dimen/px180"
                    android:layout_margin="@dimen/px30"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:layout_marginTop="@dimen/px50"
                android:layout_alignParentBottom="true"
                android:background="@color/line_long_dark"/>
            <LinearLayout
                android:id="@+id/ll_log"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim80"
                android:background="@drawable/selecter_newitem_press"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim20"
                    android:layout_weight="1"
                    android:text="协商记录"
                    android:textColor="@color/text_login_hint_color"
                    android:textSize="@dimen/txt32"/>
                <TextView
                    android:id="@+id/tv_action_num"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim20"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/text_login_hint_color"
                    android:textSize="@dimen/txt32"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim20"
                    android:src="@drawable/header_right_arrow"/>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:layout_alignParentBottom="true"
                android:background="@color/line_long_dark"/>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ly_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/selected_chart_color"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim90"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/px20"
            android:layout_marginLeft="@dimen/dim30"
            android:layout_marginRight="@dimen/dim30"
            android:layout_marginTop="@dimen/px20"
            android:layout_weight="1"
            android:background="@drawable/selector_login_button"
            android:text="同意申请"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/txt32"/>

        <Button
            android:id="@+id/btn_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/dim90"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/px20"
            android:layout_marginLeft="@dimen/dim30"
            android:layout_marginRight="@dimen/dim30"
            android:layout_marginTop="@dimen/px20"
            android:layout_weight="1"
            android:background="@drawable/selector_login_button"
            android:text="拒绝申请"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/txt32"/>

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px1"
            android:layout_weight="1"
            android:background="@drawable/selector_login_button"
            android:gravity="center"
            android:text="确认收到商品"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/texte_size_16"/>

        <TextView
            android:id="@+id/tv_writeinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_login_button"
            android:gravity="center"
            android:text="填写物流信息"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/texte_size_16"/>

    </LinearLayout>

</LinearLayout>