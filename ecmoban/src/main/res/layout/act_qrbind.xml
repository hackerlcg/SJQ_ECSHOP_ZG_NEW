<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <include layout="@layout/top_view"/>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >

    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim200"
            android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim100"
        android:layout_marginRight="@dimen/dim100"
        android:src="@drawable/qrbind"
        />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/txt35"
                android:text="@string/qrbind_confirm_title"
                android:layout_marginTop="@dimen/dim40"
                android:textColor="@color/text_login_color"
                />

            <TextView
                android:id="@+id/tv_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/txt32"
                android:layout_marginTop="@dimen/dim20"
                android:textColor="@color/bg_theme_color"
                />


        </LinearLayout>


    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginRight="@dimen/dim40"
        android:layout_marginBottom="@dimen/dim180"
        android:layout_marginTop="@dimen/dim30"
        android:minWidth="@dimen/dim400"
        android:text="@string/qrbind_rescan"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/txt35"
        android:background="@drawable/selector_login_button"
        />
    <Button
        android:id="@+id/btn_cancel"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginRight="@dimen/dim40"
        android:layout_marginBottom="@dimen/dim80"
        android:layout_marginTop="@dimen/dim30"
        android:minWidth="@dimen/dim400"
        android:text="@string/qrbind_cancel"
        android:textColor="@color/text_login_hint_color"
        android:textSize="@dimen/txt35"
        android:background="@drawable/selector_qrcancel_button"
        />
    </RelativeLayout>
    </FrameLayout>

        <FrameLayout
            android:id="@+id/fl_bind_succeed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim220"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim150"
                android:src="@drawable/bind_succeed"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/txt35"
                android:text="@string/qrbind_succeed"
                android:layout_marginTop="@dimen/dim420"
                android:textColor="@color/text_login_color"
                />

        </FrameLayout>


    </FrameLayout>
</LinearLayout>