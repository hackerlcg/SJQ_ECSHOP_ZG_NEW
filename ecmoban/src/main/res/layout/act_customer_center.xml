<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_b"
    android:orientation="vertical"
    >
    <include layout="@layout/top_view"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/line_long_dark" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim100"
                android:background="@drawable/selecter_newitem_press"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim40"
                    android:text="@string/center_name"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt32" />
                <TextView
                    android:id="@+id/tv_center_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dim10"
                    android:layout_marginRight="@dimen/dim20"
                    android:gravity="right"
                    android:textColor="@color/text_login_hint_color"
                    android:textSize="@dimen/txt32" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim1"
                android:layout_marginLeft="@dimen/dim40"
                android:background="@color/line_long_dark" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim100"
            android:background="@drawable/selecter_newitem_press"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim40"
                android:text="@string/center_mail"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/txt32" />
            <TextView
                android:id="@+id/tv_center_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_marginRight="@dimen/dim20"
                android:gravity="right"
                android:textColor="@color/text_login_hint_color"
                android:textSize="@dimen/txt32" />

        </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim1"
                android:layout_marginLeft="@dimen/dim40"
                android:background="@color/line_long_dark" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim100"
            android:background="@drawable/selecter_newitem_press"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim40"
                android:text="@string/center_last_login"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/txt32" />
            <TextView
                android:id="@+id/tv_center_last_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dim10"
                android:layout_marginRight="@dimen/dim20"
                android:gravity="right"
                android:textColor="@color/text_login_hint_color"
                android:textSize="@dimen/txt32" />

        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/line_long_dark" />

        </LinearLayout>


        <Button
            android:id="@+id/exit_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim90"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim30"
            android:layout_marginRight="@dimen/dim30"
            android:layout_marginTop="@dimen/dim100"
            android:minWidth="@dimen/dim400"
            android:text="@string/exit_login"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/txt32"
            android:background="@drawable/selector_login_button" />


</LinearLayout>
</LinearLayout>