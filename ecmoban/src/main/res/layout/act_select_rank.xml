<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_b"
    android:orientation="vertical"
    >

    <include layout="@layout/top_view"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_rank_all"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <com.ecjia.component.view.MyListView
            android:id="@+id/lv_rank"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim40"
            android:overScrollMode="never"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollbars="none"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/dim40"
                android:layout_marginLeft="@dimen/dim40"
                android:textSize="@dimen/txt30"
                android:hint="注：可多选"/>

            <Button
                android:id="@+id/btn_rank_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim80"
                android:layout_marginLeft="@dimen/dim40"
                android:layout_marginRight="@dimen/dim40"
                android:layout_marginTop="@dimen/dim40"
                android:text="@string/save"
                android:textSize="@dimen/txt36"
                android:textColor="@color/white"
                android:background="@drawable/selector_login_button"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>