<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_white_stroke_corner_unpress">

        <TextView
            android:id="@+id/tv_edit_dialog_title"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:layout_height="@dimen/dim80"
            android:gravity="center"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dim5"
            android:textSize="@dimen/txt30"
            android:textColor="@color/text_login_hint_color"/>

        <com.ecjia.component.view.MyListView
            android:id="@+id/lv_edit_dialog"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollbars="none"
            android:layout_marginBottom="@dimen/dim20"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/edit_cancel"
        android:layout_marginTop="@dimen/dim20"
        android:layout_marginBottom="@dimen/dim20"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim100"
        android:background="@drawable/shape_white_stroke_corner_unpress"
        android:gravity="center"
        android:textSize="@dimen/txt34"
        android:text="@string/dialog_cancel"
        android:textColor="@color/actionsheet_blue"/>

</LinearLayout>