<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="48dp"
    android:id="@+id/ll_search_top">


    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_theme_color"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="32dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="9dp"
            android:background="#00000000"
            android:src="@drawable/header_back_arrow"
            android:visibility="gone" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dim44"
            android:layout_marginRight="@dimen/dim20">

            <EditText
                android:id="@+id/et_search_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim70"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dim20"
                android:background="@drawable/shape_public_mydialog"
                android:gravity="center_vertical"
                android:hint="@string/search_input"
                android:imeOptions="actionSearch"
                android:paddingLeft="@dimen/dim70"
                android:paddingRight="@dimen/dim20"
                android:singleLine="true"
                android:maxLength="20"
                android:textColor="@color/text_login_color"
                android:textColorHint="@color/text_login_hint_color"
                android:textSize="@dimen/txt30"
                />

            <ImageView
                android:id="@+id/search_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dim15"
                android:src="@drawable/searcher_new_search_icon"                
                 />

        </FrameLayout>
    </LinearLayout>
</FrameLayout>