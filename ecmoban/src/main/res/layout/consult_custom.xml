<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="#00ffffff"
              android:padding="6dp">
    <TextView
        android:id="@+id/custom_title_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#cccccc"
        android:textSize="15dp"
        android:visibility="gone"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <FrameLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


            <ImageView
                android:scaleType="fitXY"
                android:layout_gravity="right|top"
                android:layout_marginRight="5dp"
                android:layout_marginTop="30dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/consult_customer_point"/>

            <TextView
                android:textSize="15dp"
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:background="@drawable/shape_consult_background_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_chatcontent_custom"/>

        </FrameLayout>

        <com.ecjia.component.imagecircle.CircleImage
            android:id="@+id/iv_userhead_custom"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:focusable="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>


    </LinearLayout>

</LinearLayout>