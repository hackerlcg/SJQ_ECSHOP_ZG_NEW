<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/top_view" />

    <LinearLayout
        android:id="@+id/ll_magic_item"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_discount_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dim100"
                    android:layout_height="@dimen/dim100"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dim10"
                    android:src="@drawable/iv_magic_discount" />

                <TextView
                    android:id="@+id/tv_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/magic_discount"
                    android:textSize="@dimen/txt26" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:layout_gravity="bottom"
                android:background="@color/line_short_dark" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dim1"
            android:layout_height="match_parent"
            android:background="@color/line_short_dark" />

        <LinearLayout
            android:id="@+id/ll_promotion_item"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/dim100"
                    android:layout_height="@dimen/dim100"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dim10"
                    android:src="@drawable/iv_magic_promotion" />

                <TextView
                    android:id="@+id/tv_promotion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/magic_promotion"
                    android:textSize="@dimen/txt26" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:layout_gravity="bottom"
                android:background="@color/line_short_dark" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dim1"
            android:layout_height="match_parent"
            android:background="@color/line_short_dark" />

        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:layout_gravity="bottom"
                android:background="@color/line_short_dark" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dim1"
            android:layout_height="match_parent"
            android:background="@color/line_short_dark" />
    </LinearLayout>
</LinearLayout>