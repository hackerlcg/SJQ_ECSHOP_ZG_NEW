<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_b"
    android:orientation="vertical">

    <include layout="@layout/top_view" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        android:background="@color/color_b" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

    <LinearLayout
        android:id="@+id/ll_set_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim100"
        android:background="@drawable/selecter_newitem_press"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim40"
            android:text="@string/discount_type"
            android:textSize="@dimen/txt32" />
        <TextView
            android:id="@+id/tv_set_type"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dim30"
            android:layout_weight="1"
            android:ellipsize="end"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dim5"
            android:textSize="@dimen/txt28"
            android:hint="@string/add_discount_no_setting"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dim40"
            android:src="@drawable/header_right_arrow"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

    <LinearLayout
        android:id="@+id/ll_discount_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        android:background="@color/color_b" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dim40"
            android:layout_height="@dimen/dim60"
            android:gravity="center"
            android:textSize="@dimen/txt28"
            android:text="@string/discount_setting_tips1"
            android:textColor="@color/text_login_hint_color"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dim40"
                android:gravity="center_vertical"
                android:text="@string/consume_lower_limit"
                android:textSize="@dimen/txt32" />
            <EditText
                android:id="@+id/et_one"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dim40"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/txt28"
                android:inputType="numberDecimal"
                android:hint="@string/add_discount_time_hint"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim1"
            android:layout_marginLeft="@dimen/dim40"
            android:background="@color/line_long_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim100"
                android:layout_marginLeft="@dimen/dim40"
                android:gravity="center_vertical"
                android:text="@string/consume_upper_limit"
                android:textSize="@dimen/txt32" />
            <EditText
                android:id="@+id/et_two"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dim40"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/txt28"
                android:inputType="numberDecimal"
                android:hint="@string/add_discount_time_hint"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical"
            >
        <View

            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim1"
            android:layout_marginLeft="@dimen/dim40"
            android:background="@color/line_long_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_three"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim100"
                android:layout_marginLeft="@dimen/dim40"
                android:gravity="center_vertical"
                android:textSize="@dimen/txt32" />
            <EditText
                android:id="@+id/et_three"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dim40"
                android:layout_weight="1"
                android:background="#ffffff"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/txt28"
                android:hint="@string/add_discount_time_hint"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

        <TextView
            android:id="@+id/tv_tips_two"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/dim40"
            android:layout_height="@dimen/dim60"
            android:gravity="center|right"
            android:textSize="@dimen/txt28"
            android:text=""
            android:textColor="@color/text_login_hint_color"/>

    <LinearLayout
        android:id="@+id/ll_gift_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        android:background="@color/color_b" />

    <View

        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_add_goods"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:background="@drawable/selecter_newitem_press"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dim40"
                android:gravity="center_vertical"
                android:text="@string/discount_setting_gift_add"
                android:textSize="@dimen/txt32" />
            <TextView
                android:id="@+id/tv_have_choose"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/dim5"
                android:textSize="@dimen/txt28"
                android:text=""
                android:hint="@string/add_discount_no_setting"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dim40"
                android:src="@drawable/header_right_arrow"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_goods_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim1"
            android:layout_marginLeft="@dimen/dim40"
            android:background="@color/line_long_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:background="@drawable/selecter_newitem_press"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dim100"
                android:layout_marginLeft="@dimen/dim40"
                android:gravity="center_vertical"
                android:text="@string/discount_setting_gift_selected"
                android:textSize="@dimen/txt32" />
            <TextView
                android:id="@+id/tv_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/dim5"
                android:textSize="@dimen/txt28"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dim40"
                android:src="@drawable/header_right_arrow"/>
        </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim1"
            android:background="@color/line_long_dark" />

    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_discount_setting_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginRight="@dimen/dim40"
        android:layout_marginTop="@dimen/dim50"
        android:text="@string/save"
        android:textSize="@dimen/txt36"
        android:textColor="@color/white"
        android:background="@drawable/selector_login_button"/>

    </LinearLayout>
</LinearLayout>
