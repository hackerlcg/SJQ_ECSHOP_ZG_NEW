<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim30"
        android:background="@color/color_b"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_left_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/receive_info"
            android:textColor="@color/text_login_color"
            android:textSize="@dimen/txt32"
        />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:layout_marginLeft="@dimen/dim20"
        android:background="@color/line_long_dark"/>

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="@dimen/dim125"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim15"
                android:layout_marginTop="@dimen/dim25"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/consignee"
                android:textColor="@color/text_login_hint_color"
                android:textSize="@dimen/txt30"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim15"
                android:layout_marginTop="@dimen/dim10"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/mobile"
                android:textColor="@color/text_login_hint_color"
                android:textSize="@dimen/txt30"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim70"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_consignee"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim15"
                android:layout_marginTop="@dimen/dim25"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/txt30"
            />
            <TextView
                android:id="@+id/tv_contract"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim15"
                android:layout_marginTop="@dimen/dim10"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/txt30"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dim15"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        android:orientation="horizontal">


        <TextView
            android:layout_width="@dimen/dim125"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim10"
            android:gravity="left|center_vertical"
            android:text="@string/rec_address"
            android:textColor="@color/text_login_hint_color"
            android:textSize="@dimen/txt30"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim70"
            android:orientation="vertical">
            <com.ecjia.component.view.CYTextView
                xmlns:cy="http://schemas.android.com/apk/res-auto"
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left|top"
                cy:mytextColor="@color/text_login_color"
                cy:mytextSize="@dimen/txt30"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/dim125"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim25"
                android:layout_marginTop="@dimen/dim10"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/postscript"
                android:textColor="@color/text_login_hint_color"
                android:textSize="@dimen/txt30"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim70"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_postscript"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim25"
                android:layout_marginTop="@dimen/dim10"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/txt30"
            />
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim30"
        android:background="@color/color_b"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_left_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/order_price"
            android:textColor="@color/text_login_color"
            android:textSize="@dimen/txt32"
        />
    </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:layout_marginLeft="@dimen/dim20"
        android:background="@color/line_long_dark"/>

    <LinearLayout
        android:id="@+id/item2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim15"
                android:layout_marginTop="@dimen/dim25"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/good_amount_total"
                android:textColor="@color/text_login_hint_color"
                android:textSize="@dimen/txt30"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim15"
                android:layout_marginTop="@dimen/dim10"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/discount2"
                android:textColor="@color/text_login_hint_color"
                android:textSize="@dimen/txt30"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim15"
                android:layout_marginTop="@dimen/dim10"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/tax"
                android:textColor="@color/text_login_hint_color"
                android:textSize="@dimen/txt30"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim25"
                android:layout_marginTop="@dimen/dim10"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/shipping_fee"
                android:textColor="@color/text_login_hint_color"
                android:textSize="@dimen/txt30"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim25"
                android:layout_marginTop="@dimen/dim10"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="优惠券"
                android:textColor="@color/text_login_hint_color"
                android:textSize="@dimen/txt30"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim15"
                android:layout_marginTop="@dimen/dim25"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/txt30"
            />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim15"
                android:layout_marginTop="@dimen/dim10"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/txt30"
            />

            <TextView
                android:id="@+id/tv_tax"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim15"
                android:layout_marginTop="@dimen/dim10"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/txt30"
            />

            <TextView
                android:id="@+id/tv_shipping"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim25"
                android:layout_marginTop="@dimen/dim10"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/txt30"
            />
            <TextView
                android:id="@+id/tv_coupons"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim25"
                android:layout_marginTop="@dimen/dim10"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/txt30"
            />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:layout_marginLeft="@dimen/dim20"
        android:background="@color/line_long_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim25"
                android:layout_marginTop="@dimen/dim25"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:text="@string/total_fee"
                android:textColor="@color/text_login_hint_color"
                android:textSize="@dimen/txt30"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_total"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/dim25"
                android:layout_marginTop="@dimen/dim25"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right|center_vertical"
                android:singleLine="true"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/txt30"
            />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim30"
        android:background="@color/color_b"/>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark"/>

    <LinearLayout
        android:id="@+id/ll_action"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim80"
        android:background="@drawable/selecter_newitem_press"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim20"
            android:layout_weight="1"
            android:text="@string/action_log"
            android:textColor="@color/text_login_color"
            android:textSize="@dimen/txt32"/>
        <TextView
            android:id="@+id/tv_action_num"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim20"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/text_login_hint_color"
            android:textSize="@dimen/txt32"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dim20"
            android:src="@drawable/header_right_arrow"/>


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:background="@color/color_b"/>

</LinearLayout>