<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_b"
    android:orientation="vertical"
    >

    <include layout="@layout/top_view"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim90"
        android:background="@drawable/selecter_newitem_press"
        android:gravity="center_vertical"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim40"
            android:layout_weight="1"
            android:text="@string/shop_price"
            android:textColor="@color/text_login_color"
            android:textSize="@dimen/txt32" />

        <EditText
            android:id="@+id/et_shop_price"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:layout_marginRight="@dimen/dim30"
            android:padding="@dimen/dim15"
            android:inputType="numberDecimal"
            android:gravity="center_vertical|right"
            android:hint="@string/state_default"
            android:textColor="@color/text_login_color"
            android:textColorHint="@color/text_login_hint_color"
            android:background="@drawable/shape_price_edit"
            android:textSize="@dimen/txt28" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

            <TextView
                android:id="@+id/cal_in_marketprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim25"
                android:layout_marginBottom="@dimen/dim30"
                android:padding="@dimen/dim12"
                android:text="@string/shop_price_btn"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dim30"
                android:background="@drawable/shape_price_tvbtn"
                android:textColor="@color/bg_theme_color"
                android:textSize="@dimen/txt30" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim90"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/selecter_newitem_press"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim40"
            android:layout_weight="1"
            android:text="@string/market_price"
            android:textColor="@color/text_login_color"
            android:textSize="@dimen/txt32" />

        <EditText
            android:id="@+id/et_market_price"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:maxLength="20"
            android:layout_marginRight="@dimen/dim30"
            android:padding="@dimen/dim15"
            android:inputType="numberDecimal"
            android:gravity="center_vertical|right"
            android:hint="@string/state_default"
            android:textColor="@color/text_login_color"
            android:textColorHint="@color/text_login_hint_color"
            android:background="@drawable/shape_price_edit"
            android:textSize="@dimen/txt28" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

            <TextView
                android:id="@+id/format_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim25"
                android:layout_marginBottom="@dimen/dim30"
                android:padding="@dimen/dim12"
                android:text="@string/format_price"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/dim30"
                android:background="@drawable/shape_price_tvbtn"
                android:textColor="@color/bg_theme_color"
                android:textSize="@dimen/txt30" />


<!--会员价格开始-->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/line_long_dark" />

            <LinearLayout
                android:id="@+id/ll_vip_price"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim90"
                android:background="@drawable/selecter_newitem_press"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim40"
                    android:layout_weight="1"
                    android:text="@string/vip_price"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt32" />

                <ImageView
                    android:id="@+id/iv_vip_price"
                    android:layout_width="@dimen/dim40"
                    android:layout_height="@dimen/dim40"
                    android:layout_marginRight="@dimen/dim30"
                    android:src="@drawable/edit_item_down"
                    />
            </LinearLayout>

            <View
                android:id="@+id/line_vip_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/line_long_dark" />
<!--会员价格隐藏部分开始-->
            <LinearLayout
                android:id="@+id/ll_vip_bottom"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_marginLeft="@dimen/dim30"
                    android:background="@color/line_long_dark" />

                <ListView
                    android:id="@+id/vip_price_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@null"
                    android:headerDividersEnabled="false"
                    android:scrollbars="none" />

                <com.ecjia.component.view.CYTextView
                    android:id="@+id/cy_tv"
                    xmlns:cy="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim80"
                    android:maxLines="2"
                    android:layout_marginTop="@dimen/dim15"
                    android:layout_marginBottom="@dimen/dim15"
                    android:layout_marginLeft="@dimen/dim100"
                    android:layout_marginRight="@dimen/dim30"
                    cy:mytextColor="@color/text_login_hint_color"
                    cy:mytextSize="@dimen/txt24" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:background="@color/line_long_dark" />

                </LinearLayout>
<!--会员价格结束-->
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim30"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/line_long_dark" />

<!--优惠价格开始-->
            <LinearLayout
                android:id="@+id/ll_bonus_price"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim90"
                android:background="@drawable/selecter_newitem_press"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim40"
                    android:layout_weight="1"
                    android:text="@string/bonus_price"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt32" />

                <ImageView
                    android:id="@+id/iv_bonus_price"
                    android:layout_width="@dimen/dim40"
                    android:layout_height="@dimen/dim40"
                    android:layout_marginRight="@dimen/dim30"
                    android:src="@drawable/edit_item_down"
                    />
            </LinearLayout>
            <View
                android:id="@+id/line_bouns_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/line_long_dark" />
<!--优惠价格隐藏部分开始-->
            <LinearLayout
                android:id="@+id/ll_bonus_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:visibility="gone"
                android:orientation="vertical"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_marginLeft="@dimen/dim100"
                    android:background="@color/line_long_dark" />

                <ListView
                    android:id="@+id/lv_bonus"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="#00000000"
                    android:dividerHeight="0dp"
                    android:headerDividersEnabled="false"
                    android:footerDividersEnabled="false"
                    />
                <LinearLayout
                    android:id="@+id/ll_add_bonus"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim90"
                    android:background="@drawable/selecter_newitem_press"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="@dimen/dim40"
                        android:layout_height="@dimen/dim40"
                        android:src="@drawable/add_bonus"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/add_bonus_price"
                        android:textColor="@color/bg_theme_color"
                        android:layout_marginLeft="@dimen/dim10"
                        android:textSize="@dimen/txt30" />
                    </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:background="@color/line_long_dark" />

                </LinearLayout>

<!--优惠价格结束-->

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim30"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/line_long_dark" />


<!--促销信息开始-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim90"
                android:background="@drawable/selecter_newitem_press"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim40"
                    android:layout_weight="1"
                    android:text="@string/promote_info_switch"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt32" />
                <CheckBox
                    android:id="@+id/cb_lock"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/dim20"
                    android:button="@drawable/selecter_geslock_checkboxbg" />
            </LinearLayout>

            <View
                android:id="@+id/line_promote_price"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/line_long_dark" />
<!--促销信息隐藏部分开始-->
            <LinearLayout
                android:id="@+id/ll_promote_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@color/white"
                >
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:layout_marginLeft="@dimen/dim100"
                android:background="@color/line_long_dark" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dim90"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/dim40"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dim60"
                            android:paddingRight="@dimen/dim0"
                            android:text="@string/promote_price"
                            android:textColor="@color/text_login_color"
                            android:textSize="@dimen/txt30" />
                    <EditText
                        android:id="@+id/et_promote_price"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dim30"
                        android:maxLength="20"
                        android:padding="@dimen/dim15"
                        android:gravity="center_vertical|right"
                        android:inputType="numberDecimal"
                        android:hint="@string/state_default"
                        android:textColor="@color/text_login_color"
                        android:textColorHint="@color/text_login_hint_color"
                        android:background="@drawable/shape_price_edit"
                        android:textSize="@dimen/txt28" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_marginLeft="@dimen/dim100"
                    android:background="@color/line_long_dark" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dim90"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/dim40"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dim60"
                            android:paddingRight="@dimen/dim0"
                            android:text="@string/promote_start_time"
                            android:textColor="@color/text_login_color"
                            android:textSize="@dimen/txt30" />
                    <TextView
                        android:id="@+id/tv_promote_stime"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:maxLength="20"
                        android:layout_marginRight="@dimen/dim30"
                        android:padding="@dimen/dim15"
                        android:gravity="center_vertical|right"
                        android:hint="@string/state_default"
                        android:textColor="@color/bg_theme_color"
                        android:textColorHint="@color/text_login_hint_color"
                        android:background="@drawable/shape_price_edit"
                        android:textSize="@dimen/txt28" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:layout_marginLeft="@dimen/dim100"
                    android:background="@color/line_long_dark" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/dim90"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/dim40"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dim60"
                            android:paddingRight="@dimen/dim0"
                            android:text="@string/promote_end_time"
                            android:textColor="@color/text_login_color"
                            android:textSize="@dimen/txt32" />
                    <TextView
                        android:id="@+id/tv_promote_etime"
                        android:layout_width="170dp"
                        android:layout_height="wrap_content"
                        android:maxLength="20"
                        android:layout_marginRight="@dimen/dim30"
                        android:padding="@dimen/dim15"
                        android:gravity="center_vertical|right"
                        android:hint="@string/state_default"
                        android:textColor="@color/bg_theme_color"
                        android:textColorHint="@color/text_login_hint_color"
                        android:background="@drawable/shape_price_edit"
                        android:textSize="@dimen/txt28" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim1"
                    android:background="@color/line_long_dark" />

            </LinearLayout>
<!--促销信息结束-->

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim30"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/line_long_dark" />

<!--积分相关开始-->
            <LinearLayout
                android:id="@+id/ll_points"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim90"
                android:background="@drawable/selecter_newitem_press"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dim40"
                    android:layout_weight="1"
                    android:text="@string/about_point"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt32" />

                <ImageView
                    android:id="@+id/iv_points"
                    android:layout_width="@dimen/dim40"
                    android:layout_height="@dimen/dim40"
                    android:layout_marginRight="@dimen/dim30"
                    android:src="@drawable/edit_item_down"
                    />
            </LinearLayout>

            <View
                android:id="@+id/line_about_points"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/line_long_dark" />
<!--积分相关隐藏部分开始-->

        <LinearLayout
            android:id="@+id/ll_points_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@color/white"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:layout_marginLeft="@dimen/dim100"
                android:background="@color/line_long_dark" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim90"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dim40"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dim60"
                    android:paddingRight="@dimen/dim0"
                    android:text="@string/consume_points"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt30" />
                <EditText
                    android:id="@+id/et_consume_points"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:layout_marginRight="@dimen/dim30"
                    android:inputType="numberDecimal"
                    android:digits="1234567890-."
                    android:padding="@dimen/dim15"
                    android:gravity="center_vertical|right"
                    android:imeOptions="actionNext"
                    android:hint="@string/state_default"
                    android:textColor="@color/text_login_color"
                    android:textColorHint="@color/text_login_hint_color"
                    android:background="@drawable/shape_price_edit"
                    android:textSize="@dimen/txt28" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:layout_marginLeft="@dimen/dim100"
                android:background="@color/line_long_dark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim20"
                android:layout_marginBottom="@dimen/dim30"
                android:layout_marginLeft="@dimen/dim100"
                android:text="@string/points_tips1"
                android:textColor="@color/text_login_hint_color"
                android:textSize="@dimen/txt24" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim90"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dim40"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dim60"
                    android:paddingRight="@dimen/dim0"
                    android:text="@string/level_points"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt30" />
                <EditText
                    android:id="@+id/et_level_points"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:layout_marginRight="@dimen/dim30"
                    android:padding="@dimen/dim15"
                    android:gravity="center_vertical|right"
                    android:inputType="numberDecimal"
                    android:digits="1234567890-."
                    android:imeOptions="actionNext"
                    android:hint="@string/state_default"
                    android:textColor="@color/text_login_color"
                    android:textColorHint="@color/text_login_hint_color"
                    android:background="@drawable/shape_price_edit"
                    android:textSize="@dimen/txt28" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:layout_marginLeft="@dimen/dim100"
                android:background="@color/line_long_dark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim20"
                android:layout_marginBottom="@dimen/dim30"
                android:layout_marginLeft="@dimen/dim100"
                android:text="@string/points_tips2"
                android:textColor="@color/text_login_hint_color"
                android:textSize="@dimen/txt24" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim90"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dim40"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dim60"
                    android:paddingRight="@dimen/dim0"
                    android:text="@string/use_points_limit"
                    android:textColor="@color/text_login_color"
                    android:textSize="@dimen/txt30" />
                <EditText
                    android:id="@+id/et_points_limit"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:layout_marginRight="@dimen/dim30"
                    android:padding="@dimen/dim15"
                    android:gravity="center_vertical|right"
                    android:inputType="numberDecimal"
                    android:digits="1234567890-."
                    android:hint="@string/state_default"
                    android:textColor="@color/text_login_color"
                    android:textColorHint="@color/text_login_hint_color"
                    android:background="@drawable/shape_price_edit"
                    android:textSize="@dimen/txt28" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:layout_marginLeft="@dimen/dim100"
                android:background="@color/line_long_dark" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim20"
                android:layout_marginBottom="@dimen/dim50"
                android:layout_marginLeft="@dimen/dim100"
                android:text="@string/points_tips3"
                android:textColor="@color/text_login_hint_color"
                android:textSize="@dimen/txt24" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim1"
                android:background="@color/line_long_dark" />

        </LinearLayout>

<!--积分相关结束-->

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim90"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim60"
                android:layout_marginBottom="@dimen/dim60"
                android:layout_marginLeft="@dimen/dim40"
                android:layout_marginRight="@dimen/dim40"
                android:minWidth="@dimen/dim400"
                android:text="@string/dialog_ensure"
                android:textColor="@color/white"
                android:textSize="@dimen/txt35"
                android:background="@drawable/selector_fset_lock_button"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>