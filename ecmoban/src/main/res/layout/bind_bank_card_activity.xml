<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="data"
            type="com.ecjia.entity.Assets"/>
        <variable
            name="onClick"
            type="android.view.View.OnClickListener"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include android:id="@+id/ic_head"
            layout="@layout/top_view"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/ic_head"
            android:background="@color/color_b"
            android:paddingTop="16dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请绑定持卡人本人的银行卡"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="16dp"
                android:textColor="@color/filter_text_color"/>
            <RelativeLayout
                style="@style/DivItem">

                <TextView
                    android:id="@+id/name"
                    style="@style/DivItemText"
                    android:text="持卡人"/>
                <EditText
                    android:id="@+id/tv_name"
                    style="@style/DivItemEdit"
                    android:layout_toRightOf="@id/name"
                    android:maxLines="1"
                    android:text="@={data.sellerName}"
                    android:hint="姓名"/>
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim1"
                android:layout_marginLeft="@dimen/dim40"
                android:background="@color/line_long_dark"/>

            <RelativeLayout
                style="@style/DivItem">

                <TextView
                    android:id="@+id/name2"
                    style="@style/DivItemText"
                    android:text="卡号"/>
                <EditText
                    android:id="@+id/tv_card_id"
                    style="@style/DivItemEdit"
                    android:layout_toRightOf="@id/name2"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:text="@={data.card}"
                    android:hint="储蓄卡账号"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim1"
                android:layout_marginLeft="@dimen/dim40"
                android:background="@color/line_long_dark"/>

            <RelativeLayout
                android:id="@+id/rl_bank_card"
                style="@style/DivItem"
                android:onClick="@{onClick}">

                <TextView
                    android:id="@+id/name3"
                    style="@style/DivItemText"
                    android:text="开户行"/>
                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/header_right_arrow"/>
                <EditText
                    android:id="@+id/tv_choose_bank"
                    style="@style/DivItemEdit"
                    android:layout_toRightOf="@id/name3"
                    android:layout_toLeftOf="@id/iv_left"
                    android:enabled="false"
                    android:gravity="@{data.bankName}"
                    android:maxLines="1"
                    android:textColor="@android:color/black"
                    android:text="@={data.bankName}"
                    android:hint="请选择银行"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim1"
                android:layout_marginLeft="@dimen/dim40"
                android:background="@color/line_long_dark"/>

            <RelativeLayout
                style="@style/DivItem">

                <TextView
                    android:id="@+id/name4"
                    style="@style/DivItemText"
                    android:text="身份证号"/>
                <EditText
                    android:id="@+id/tv_id"
                    style="@style/DivItemEdit"
                    android:layout_toRightOf="@id/name4"
                    android:maxLines="1"
                    android:digits="0987654321xX"
                    android:text="@={data.identity}"
                    android:hint="持卡人身份证号"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim1"
                android:layout_marginLeft="@dimen/dim40"
                android:background="@color/line_long_dark"/>

            <RelativeLayout
                style="@style/DivItem">

                <TextView
                    android:id="@+id/name5"
                    style="@style/DivItemText"
                    android:text="手机号码"/>
                <EditText
                    android:id="@+id/tv_phone"
                    style="@style/DivItemEdit"
                    android:layout_toRightOf="@id/name5"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:digits="0987654321"
                    android:text="@={data.mobile}"
                    android:hint="持卡人手机号"/>
            </RelativeLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim1"
                android:layout_marginLeft="@dimen/dim40"
                android:background="@color/line_long_dark"/>

            <RelativeLayout
                style="@style/DivItem">

                <TextView
                    android:id="@+id/name6"
                    style="@style/DivItemText"
                    android:text="短信验证码"/>
                <EditText
                    android:id="@+id/tv_sms"
                    style="@style/DivItemEdit"
                    android:layout_toRightOf="@id/name6"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:maxLength="6"
                    android:inputType="phone"
                    android:text="@={data.sms}"
                    android:hint="短信验证码"/>
                <TextView
                    android:id="@+id/tv_get_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_button_back"
                    android:layout_alignParentRight="true"
                    android:text="获取验证码"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:onClick="@{onClick}"/>
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_cash_btn"
            style="@style/CashBottomBtn"
            android:text="确定"
            android:onClick="@{onClick}"/>
    </RelativeLayout>

</layout>