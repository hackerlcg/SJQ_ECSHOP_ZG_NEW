<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/top_view"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        android:background="@color/color_b"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dim100"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px200"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim40"
            android:gravity="center_vertical"
            android:text="快递公司："
            android:textSize="@dimen/txt32"/>
        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="@dimen/px400"
            android:layout_height="@dimen/px60"
            android:background="@drawable/bg_spinne"
            android:paddingLeft="@dimen/layout_marginLR"
            android:textSize="@dimen/txt32"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:layout_marginLeft="@dimen/dim40"
        android:background="@color/line_long_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim100"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/px200"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dim40"
            android:gravity="center_vertical"
            android:text="快递单号:"
            android:textSize="@dimen/txt32"/>
        <EditText
            android:id="@+id/edit_shipping_num"
            android:layout_width="@dimen/px400"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:textSize="@dimen/txt28"/>

        <ImageView
            android:id="@+id/img_zxing"
            android:layout_width="@dimen/px60"
            android:layout_margin="@dimen/px20"
            android:layout_height="@dimen/px60"
            android:background="@color/actionsheet_blue"
            android:src="@drawable/zxing"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        android:background="@color/color_b"/>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginRight="@dimen/dim40"
        android:layout_marginTop="@dimen/dim50"
        android:background="@drawable/selector_login_button"
        android:text="发货"
        android:textColor="@color/white"
        android:textSize="@dimen/txt36"/>

</LinearLayout>