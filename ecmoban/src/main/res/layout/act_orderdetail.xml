<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_b"
    android:orientation="vertical"
    >

    <include layout="@layout/top_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:background="@color/white"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_left_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dim20"
            android:layout_centerVertical="true"
            android:text="@string/order_state2"
            android:textSize="@dimen/txt32"
            android:textColor="@color/text_login_color"
            />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_left_time"
            android:textSize="@dimen/txt30"
            android:layout_marginLeft="@dimen/dim50"
            android:textColor="@color/text_login_color"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim1"
            android:layout_alignParentBottom="true"
            android:background="@color/line_long_dark" />

    </RelativeLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:headerDividersEnabled="false"
            android:scrollbars="none" />

    <Button
        android:id="@+id/btn_operate"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/dim90"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dim30"
        android:layout_marginRight="@dimen/dim30"
        android:layout_marginBottom="@dimen/px20"
        android:layout_marginTop="@dimen/px20"
        android:minWidth="@dimen/dim400"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/txt32"
        android:background="@drawable/selector_login_button" />

</LinearLayout>