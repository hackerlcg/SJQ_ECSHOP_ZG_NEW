<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/color_b"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_watch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_push_bg"
        android:layout_marginLeft="@dimen/dim20"
        android:layout_marginRight="@dimen/dim20"
        android:layout_marginBottom="@dimen/dim30"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_good"
                android:layout_width="@dimen/dim120"
                android:layout_height="@dimen/dim120"
                android:layout_margin="@dimen/dim20"
                android:src="@drawable/default_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/tv_push_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dim20"
                        android:layout_marginBottom="@dimen/dim20"
                        android:textColor="@color/text_login_color"
                        android:textSize="@dimen/txt32" />

                        />
                    <TextView
                        android:id="@+id/tv_push_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dim20"
                        android:gravity="right"
                        android:textColor="@color/text_login_hint_color"
                        android:textSize="@dimen/txt24" />

                        />

                    </LinearLayout>

                <com.ecjia.component.view.CYTextView
                    xmlns:cy="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/tv_push_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dim20"
                    android:ellipsize="end"
                    cy:mytextColor="@color/text_login_hint_color"
                    cy:mytextSize="@dimen/txt30"
                    />


                </LinearLayout>

            </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim1"
            android:background="@color/line_long_dark" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim100"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim20"
                android:layout_weight="1"
                android:text="@string/watch_now"
                android:textColor="@color/text_login_color"
                android:textSize="@dimen/txt32" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dim20"
                android:src="@drawable/header_right_arrow" />


        </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_read"
            android:layout_width="@dimen/dim15"
            android:layout_height="@dimen/dim15"
            android:layout_marginLeft="@dimen/dim30"
            android:layout_marginBottom="@dimen/dim95"
            android:layout_gravity="bottom"
            android:src="@drawable/shape_main_circle_collectnumbg" />

    </FrameLayout>
</LinearLayout>