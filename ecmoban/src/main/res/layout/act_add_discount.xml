<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_b"
    android:orientation="vertical">

    <include layout="@layout/top_view" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        android:background="@color/color_b" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim100"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim40"
            android:text="@string/add_discount_name"
            android:textSize="@dimen/txt32" />

        <EditText
            android:id="@+id/et_discount_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dim40"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/txt28"
            android:hint="@string/add_discount_name_tips" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        android:background="@color/color_b" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dim40"
                android:gravity="center_vertical"
                android:text="@string/add_discount_start_time"
                android:textSize="@dimen/txt32" />
            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:layout_marginRight="@dimen/dim40"
                android:textSize="@dimen/txt28"
                android:hint="@string/add_discount_time_hint"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim1"
            android:layout_marginLeft="@dimen/dim40"
            android:background="@color/line_long_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim100"
                android:layout_marginLeft="@dimen/dim40"
                android:gravity="center_vertical"
                android:text="@string/add_discount_end_time"
                android:textSize="@dimen/txt32" />
            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:layout_marginRight="@dimen/dim40"
                android:textSize="@dimen/txt28"
                android:hint="@string/add_discount_time_hint"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        android:background="@color/color_b" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

    <LinearLayout
        android:id="@+id/ll_level"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim100"
        android:background="@drawable/selecter_newitem_press"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim40"
            android:text="@string/add_discount_rank_level"
            android:textSize="@dimen/txt32" />
        <TextView
            android:id="@+id/tv_level"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dim30"
            android:layout_weight="1"
            android:ellipsize="end"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:singleLine="true"
            android:layout_marginRight="@dimen/dim5"
            android:textSize="@dimen/txt28"
            android:hint="@string/add_discount_no_setting"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dim40"
            android:src="@drawable/header_right_arrow"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        android:background="@color/color_b" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_discount_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:background="@drawable/selecter_newitem_press"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dim40"
                android:gravity="center_vertical"
                android:text="@string/add_discount_setting"
                android:textSize="@dimen/txt32" />
            <TextView
                android:id="@+id/tv_discount_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right"
                android:layout_marginRight="@dimen/dim5"
                android:textSize="@dimen/txt28"
                android:hint="@string/add_discount_no_setting"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dim40"
                android:src="@drawable/header_right_arrow"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim1"
            android:layout_marginLeft="@dimen/dim40"
            android:background="@color/line_long_dark" />

        <LinearLayout
            android:id="@+id/ll_option_goods"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:background="@drawable/selecter_newitem_press"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dim100"
                android:layout_marginLeft="@dimen/dim40"
                android:gravity="center_vertical"
                android:text="@string/add_discount_option_goods"
                android:textSize="@dimen/txt32" />
            <TextView
                android:id="@+id/tv_option_goods"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/dim5"
                android:textSize="@dimen/txt28"
                android:text="@string/add_discount_all_goods"
                android:hint="@string/add_discount_no_setting"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dim40"
                android:visibility="invisible"
                android:src="@drawable/header_right_arrow"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_range_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dim1"
                android:layout_marginLeft="@dimen/dim40"
                android:background="@color/line_long_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim100"
                android:background="@drawable/selecter_newitem_press"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_choice_range"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dim100"
                    android:layout_marginLeft="@dimen/dim40"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/txt32" />
                <TextView
                    android:id="@+id/tv_choice_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dim5"
                    android:textSize="@dimen/txt28"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dim40"
                    android:src="@drawable/header_right_arrow"/>
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim1"
            android:background="@color/line_long_dark" />

    </LinearLayout>
    <Button
        android:id="@+id/btn_discount_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginRight="@dimen/dim40"
        android:layout_marginTop="@dimen/dim50"
        android:text="@string/save"
        android:textSize="@dimen/txt36"
        android:textColor="@color/white"
        android:background="@drawable/selector_login_button"/>
    <Button
        android:id="@+id/btn_discount_del"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginRight="@dimen/dim40"
        android:layout_marginTop="@dimen/dim25"
        android:text="@string/delete3"
        android:textSize="@dimen/txt36"
        android:visibility="gone"
        android:textColor="@color/btn_login_color_normal"
        android:background="@drawable/selector_cancel_button"/>

        <TextView
            android:id="@+id/tv_del_tips"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim80"
            android:gravity="center_vertical|right"
            android:layout_marginLeft="@dimen/dim40"
            android:textSize="@dimen/txt28"
            android:text="@string/edit_discount_del_tips"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
