<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim30"
        android:background="@drawable/new_good_distance" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim90"
        android:layout_marginRight="@dimen/dim20"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_left_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/order_time"
            android:textSize="@dimen/txt30"
            android:layout_marginLeft="@dimen/dim20"
            android:textColor="@color/text_login_hint_color"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_left_time"
            android:textSize="@dimen/txt30"
            android:layout_marginLeft="@dimen/dim20"
            android:textColor="@color/text_login_hint_color"
            />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/order_num"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/txt25"
            android:textColor="@color/text_login_hint_color"
            />
        </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:layout_marginLeft="@dimen/dim20"
        android:background="@color/line_long_dark" />

            <LinearLayout
                android:id="@+id/item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selecter_newitem_press"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/iv_order"
                        android:layout_width="@dimen/dim180"
                        android:layout_height="@dimen/dim180"
                        android:layout_margin="@dimen/dim20"
                        android:background="@drawable/default_image" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dim20"
                    android:layout_marginBottom="@dimen/dim20"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/order_id"
                        android:textSize="@dimen/txt30"
                        android:textColor="@color/text_login_hint_color"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/order_account"
                        android:textSize="@dimen/txt30"
                        android:textColor="@color/text_login_hint_color"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="@string/order_payment"
                        android:textSize="@dimen/txt30"
                        android:textColor="@color/text_login_hint_color"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dim20"
                    android:layout_marginBottom="@dimen/dim20"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/tv_id"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="@dimen/txt30"
                        android:textColor="@color/text_login_hint_color"
                        />
                    <TextView
                        android:id="@+id/tv_account"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="@dimen/txt30"
                        android:textColor="@color/text_login_color"
                        />
                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="@dimen/txt30"
                        android:textColor="@color/text_login_hint_color"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/dim20"
                    android:orientation="vertical" >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/header_right_arrow" />
                </LinearLayout>


        </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark"/>

</LinearLayout>