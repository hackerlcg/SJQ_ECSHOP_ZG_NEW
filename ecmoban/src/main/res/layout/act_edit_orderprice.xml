<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include layout="@layout/top_view"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        android:background="@color/color_b"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim100"
        android:background="@color/white"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="@dimen/px250"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim40"
            android:text="@string/goods_accountall"
            android:textSize="@dimen/txt32"/>

        <TextView
            android:id="@+id/tv_goods_amount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dim40"
            android:layout_weight="1"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:textSize="@dimen/txt28"/>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        android:background="@color/color_b"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/px250"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dim40"
                android:gravity="center_vertical"
                android:text="@string/shipping_fee2"
                android:textSize="@dimen/txt32"/>
            <EditText
                android:id="@+id/edit_shipping_fee"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ffffff"
                android:inputType="numberDecimal"
                android:gravity="center_vertical"
                android:textSize="@dimen/txt28"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dim1"
            android:layout_marginLeft="@dimen/dim40"
            android:background="@color/line_long_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim100"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/px250"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dim40"
                android:gravity="center_vertical"
                android:text="优惠金额:"
                android:textSize="@dimen/txt32"/>
            <EditText
                android:id="@+id/edit_discount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="numberDecimal"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:textSize="@dimen/txt28"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark"/>
    <Button
        android:id="@+id/btn_discount_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim80"
        android:layout_marginLeft="@dimen/dim40"
        android:layout_marginRight="@dimen/dim40"
        android:layout_marginTop="@dimen/dim50"
        android:background="@drawable/selector_login_button"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="@dimen/txt36"/>

</LinearLayout>