<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_b"
    android:orientation="vertical"
    >

    <include layout="@layout/top_view"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim30"
        />

    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

    <LinearLayout
        android:id="@+id/ll_shop_category"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim110"
        android:background="@drawable/selecter_newitem_press"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim40"
            android:layout_weight="1"
            android:textColor="@color/text_login_color"
            android:textSize="@dimen/txt30" />
        <ImageView
            android:id="@+id/iv_del_address"
            android:layout_width="@dimen/dim70"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dim20"
            android:paddingRight="@dimen/dim20"
            android:src="@drawable/address_del" />


    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dim1"
        android:background="@color/line_long_dark" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim24"
            android:layout_marginBottom="@dimen/dim24"
            android:orientation="horizontal"
            >

            <com.ecjia.component.wheel.WheelTimeView
                android:id="@+id/r1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </com.ecjia.component.wheel.WheelTimeView>

            <com.ecjia.component.wheel.WheelTimeView
                android:id="@+id/r2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >
            </com.ecjia.component.wheel.WheelTimeView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim1"
            android:background="@color/TextColorGray"
            android:layout_marginBottom="@dimen/dim32"
            android:layout_gravity="center_vertical"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim1"
            android:layout_marginTop="@dimen/dim32"
            android:background="@color/TextColorGray"
            android:layout_gravity="center_vertical"
            />

    </FrameLayout>
    </RelativeLayout>
</LinearLayout>
